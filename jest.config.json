{
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", { "useESM": true }]
  },
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/__tests__/**/*.test.{ts,tsx}",
    "**/?(*.)+(spec|test).{ts,tsx}"
  ],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/$1",
    "@components/(.*)": "<rootDir>/components/$1",
    "@utils/(.*)": "<rootDir>/utils/$1",
    "@styles/(.*)": "<rootDir>/styles/$1",
    "@public/(.*)": "<rootDir>/public/$1",
    "@types/(.*)": "<rootDir>/types/$1"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/jest.setup.ts"
  ],
  "collectCoverageFrom": [
    "components/**/*.{ts,tsx}",
    "pages/**/*.{ts,tsx}",
    "utils/**/*.{ts,tsx}",
    "!**/*.d.ts",
    "!**/node_modules/**",
    "!pages/_app.tsx",
    "!pages/_document.tsx"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
