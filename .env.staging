AUDIT_LOGGING=false
DATA_RESIDENCY=us-west-1

# Performance - Staging
CACHE_TTL=60
CDN_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring - Staging (more lenient thresholds)
